---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { astroI18n, t, l } from "astro-i18n";
---

<!doctype html>
<html lang={t("index/_lang")}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<slot name="head"/>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>


	@font-face {
		font-family: 'Fira';
		src: url("/assets/fonts/Fira_Code/FiraCode-VariableFont_wght.ttf");
	}
	@font-face {
		font-family: 'MPlus';
		src: url("/assets/fonts/M_PLUS_1p/MPLUS1p-Regular.ttf");

	}
	@font-face {
		font-family: 'MPlus';
		font-weight: bold;
		src: url("/assets/fonts/M_PLUS_1p/MPLUS1p-Bold.ttf");
	}
	@font-face {
		font-family: 'NotoEmoji';
		src: url("/assets/fonts/Noto_Emoji/NotoEmoji-VariableFont_wght.ttf");
	}
	body {
		margin: 0;
		width: 100vw; 
		background: linear-gradient(to bottom, var(--rgb-bg-from), var(--rgb-bg-to));
	}
	
	body > * {
		margin: 1rem;
	}
	h1 {
		font-size: 2.5rem;
		line-height: 3rem;
		text-align: center;
		margin: 0 1rem;
		font-family: 'Fira', 'NotoEmoji';
	}
	h2 {
		font-size: 2rem;
		line-height: 2rem;
		font-family: 'Fira', 'NotoEmoji';
	}
	h3 {
		font-size: 1.5rem;
		line-height: 1.5rem;
		font-family: 'Fira', 'NotoEmoji';
	}
	:root {
		font-size: clamp(12px, 2.5vw, 20px);
		display: flex;
		justify-content: center;

		--rgb-bg-from: #1d1812;
		--rgb-bg-to: #000000;
		--rgb-text: #ffffff;
		--rgb-accent-from: #ffbd39;
		--rgb-accent-to: #c6690c;

		font-family:  MPlus, NotoEmoji;
		color: var(--rgb-text);
		line-height: 1rem;
	}
	html {
		min-height: 100vh;
		width: max-content;
		overflow-x: hidden;
		scrollbar-gutter: stable;
  	}

	img { 
		image-rendering: optimizeSpeed;             /* STOP SMOOTHING, GIVE ME SPEED  */
		image-rendering: -moz-crisp-edges;          /* Firefox                        */
		image-rendering: -o-crisp-edges;            /* Opera                          */
		image-rendering: -webkit-optimize-contrast; /* Chrome (and eventually Safari) */
		image-rendering: pixelated;                 /* Universal support since 2021   */
		image-rendering: optimize-contrast;         /* CSS3 Proposed                  */
		-ms-interpolation-mode: nearest-neighbor;   /* IE8+                           */
	}		
	a {
		all: unset;
		color: var(--rgb-text);
		
	}
	a:hover {
		text-decoration: 0.1em solid underline;
		cursor: pointer;
		transform: scale(1.1);
		color: var(--rgb-accent-from);
	}
	/* width */
	::-webkit-scrollbar {
		width: 0.5rem;
	}

	/* Track */
	::-webkit-scrollbar-track {
		background: var(--rgb-bg-from);
	}

	/* Handle */
	::-webkit-scrollbar-thumb {
		background: var(--rgb-accent-to);
		border-radius: 0 10px 0 10px;
	}

	/* Handle on hover */
	::-webkit-scrollbar-thumb:hover {
		background: var(--rgb-accent-from);
	}
</style>
